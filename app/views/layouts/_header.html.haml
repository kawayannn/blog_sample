.header
  .header-left
    .header-left__blog
      = link_to root_path do
        Blog
  .header-name
    こんにちは
    - if user_signed_in?
      = link_to "/users/#{current_user.id}" do
        = current_user.name
    - else
      ゲスト
    さん
  .header-rigth
    %ul.lists
      - if !user_signed_in?
        %li.lists__list
          = link_to new_user_session_path do
            ログイン
      -else
        %li.lists__list
          = link_to destroy_user_session_path, method: :delete do
            ログアウト
        %li.lists__list
          = link_to new_article_path do
            投稿
